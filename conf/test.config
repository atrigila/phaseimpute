/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run nf-core/phaseimpute -profile test,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Limit resources so that this can run on GitHub Actions
    max_cpus   = 2
    max_memory = '6.GB'
    max_time   = '6.h'

    // Input data
    input           = "tests/csv/sample_sim.csv"
    input_region    = "tests/csv/regionsheet.csv"
    depth           = [1, 2]
    outdir          = "results/test"
    genome          = "GRCh38"
    map             = "/mnt/s/Users/Main/Documents/Louis/Travail/IGDR/EnCours/test-datasets/data/genetic_maps.b38/chr21.b38.gmap.gz"
    fasta           = "/mnt/s/Users/Main/Documents/Louis/Travail/IGDR/EnCours/test-datasets/data/reference_genome/hs38DH.chr21.fa"

    step            = "simulate"
}
