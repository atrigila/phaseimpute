process {
    withName: GLIMPSE2_CHUNK {
        ext.prefix = { "${meta.panel_id}_${meta.chr}_chunks" }
        ext.args = ["--window-mb 0.01", "--window-cm 0.01", "--window-count 200", "--buffer-mb 0.005", "--buffer-cm 0.005", "--buffer-count 30"].join(' ')
    }

    withName: SHAPEIT5_PHASECOMMON {
        ext.prefix = { "${meta.panel_id}_${meta.chunk.replace(':',"_")}_chunks" }
    }

    withName: SHAPEIT5_LIGATE {
        ext.prefix = { "${meta.panel_id}_ligate" }
    }
}
