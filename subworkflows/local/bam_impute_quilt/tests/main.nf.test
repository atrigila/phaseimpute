        when {
            workflow {
                """
                bampath = Channel.of(
                    "NA12878.s.bam",
                    "NA19401.s.bam"
                ).collectFile(name: 'bampath.txt', newLine: true)
                bamname = Channel.of(
                    "MySample1",
                    "MySample2"
                ).collectFile(name: 'bamname.txt', newLine: true)
